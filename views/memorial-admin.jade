  // Wrapper
  #wrapper


    // ADD USER
    h2 Add Victime
    #addUser
      fieldset
        input#inputPrenomSoumeter(type='text', placeholder='Prénom de la personne que soumet le formulaire')
        input#inputNomSoumeter(type='text', placeholder='Nom de la personne que soumet le formulaire')
