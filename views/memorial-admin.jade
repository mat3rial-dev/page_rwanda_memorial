        input#inputPrenomVictime(type='text', placeholder='Prénom de la victime')
        input#inputNomVictime(type='text', placeholder='Nom de la victime')
        br
        input#inputPrenomPere(type='text', placeholder='Prénom du pere de la victime')
        input#inputNomPere(type='text', placeholder='Nom du pere de la victime')
        input#inputPrenomMere(type='text', placeholder='Prénom de la mere de la victime')
        input#inputNomMere(type='text', placeholder='Nom de la mere de la victime')
        br
        input#inputDateNaissance(type='text', placeholder='Date de naissance de la victime YYYY-MM-DD')
        input#inputDateDeces(type='text', placeholder='Date de décès de la victime YYYY-MM-DD')
        br
        input#inputLieuNaissance(type='text', placeholder='Lieu de naissance de la victime')
        input#inputLieuResidence(type='text', placeholder='Lieu de résidence de la victime')
        input#LieuDeces(type='text', placeholder='Lieu de décès de la victime')
        br
        input#inputProfessionVictime(type='text', placeholder='Profession et lieu de travail')
        input#inputTemoignane(type='text', placeholder='Témoignage sur la victime')
        select#inputCirconstancesDeces
          option(selected disabled hidden) Circonstances de décès
          option(value='Fusillé') Fusillé
          option(value='Machette') Machette
          option(value='Jeté dans une latrine vivant') Jeté dans une latrine vivant
          option(value='Jeté dans une fosse commune vivant') Jeté dans une fosse commune vivant
          option(value='Viol') Viol
          option(value='Inconnu') Inconnu
          option(value='Autre') Autre
        br
        button#btnAddUser Add Victime
        br




